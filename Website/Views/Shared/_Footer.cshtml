@{
    string countAccess = "0";
    if (Context.Response.Headers.ContainsKey("CountAccess"))
        countAccess = Context.Response.Headers["CountAccess"];
}

<footer>
    <div class="container footer-panel">
        <div class="d-flex justify-content-between">
            <div class="hospital-info">
                <h3 class="title">THÔNG TIN BỆNH VIỆN</h3>
                <ul class="d-flex flex-column gap-2">
                    <li>
                        <span class="content">
                            <span class="icon-item">
                                <img alt="icon_footer1" src="~/img/icon/icon_footer1.png" width="15" height="20" decoding="async" data-nimg="1" loading="lazy" style="color:transparent">
                            </span>
                            @(!string.IsNullOrEmpty(ViewData["Cfg_Address"]?.ToString()) ? ViewData["Cfg_Address"] : "216 Nguyễn Công Trứ, Quận Sơn Trà, Đà Nẵng")
                        </span>
                    </li>
                    <li>
                        <span class="content">
                            <span class="icon-item"><img alt="icon_footer2" src="~/img/icon/icon_footer2.png" width="19" height="15" decoding="async" data-nimg="1" loading="lazy" style="color:transparent"></span>
                            @(!string.IsNullOrEmpty(ViewData["Cfg_Email"]?.ToString()) ? ViewData["Cfg_Email"] : "cskh@benhvien199.vn")
                        </span>
                    </li>
                    <li>
                        <span class="content">
                            <span class="icon-item">
                                <img alt="icon_footer3" src="~/img/icon/icon_footer3.png" width="18" height="19" decoding="async" data-nimg="1" loading="lazy" style="color:transparent">
                            </span>
                            @Context.Request.Host
                        </span>
                    </li>
                    <li>
                        <a class="css-18wrpjs" href="tel:1900986868">
                            <span class="content">
                                <span class="icon-item">
                                    <img alt="icon_footer4" src="~/img/icon/icon_footer4.png" width="15" height="16" decoding="async" data-nimg="1" loading="lazy" style="color:transparent">
                                </span>@(!string.IsNullOrEmpty(ViewData["Cfg_Phone"]?.ToString()) ? ViewData["Cfg_Phone"] : "1900986868")
                            </span>
                        </a>
                    </li>
                </ul>
                <div class="d-flex report">
                    <div class="online">
                        <p class="m-0">Trực tuyến<br> @(Website.Middleware.OnlineUsersMiddleware.GetOnlineUsersCount())</p>
                    </div>
                    <div class="views-total">
                        <p class="m-0">Tổng lượt truy cập <br>@countAccess</p>
                    </div>
                </div>
            </div>
            <div class="customer-guide">
                <div>
                    <div class="center_fot">
                        <h3 class="title-fot">HỖ TRỢ</h3>
                        <div class="category">
                            <ul>
                                <li><a rel="canonical" href="#" name="hdkh" class="lnk-ft">Hướng dẫn khách hàng</a></li>
                                <li>
                                    <a rel="canonical" href="#" name="bgdv" class="lnk-ft">Bảng giá dịch vụ</a>
                                </li>
                                <li>
                                    <a rel="canonical" href="#" name="qtkb" class="lnk-ft">Quy trình khám bệnh</a>
                                </li>
                                 <li>
                                    <a rel="canonical" href="http://mail.benhvien199.vn" target="_blank">
                                        Email nội bộ
                                    </a>
                                </li>
                                <li>
                                    <a rel="canonical" href="http://qldh.benhvien199.vn" target="_blank">
                                        Văn bản nội bộ
                                    </a>
                                </li>
                            </ul>
                        </div>
                        
                        <div class="category">
                            <a rel="canonical" href="https://tinnhiemmang.vn/danh-ba-tin-nhiem/benhvien199vn-1698822941" title="Chung nhan Tin Nhiem Mang" target="_blank"><img src="https://tinnhiemmang.vn/handle_cert?id=benhvien199.vn" width="150px" height="auto" alt="Chung nhan Tin Nhiem Mang"></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="contact-fanpage">
                <div>
                    <div class="right_fot">
                        <h3 class="title-fot">FANPAGE</h3>
                        <iframe class="fb_link" allow="encrypted-media" allowtransparency="true" frameborder="0" height="210" scrolling="no" src="https://www.facebook.com/plugins/page.php?href=https://www.facebook.com/benhvien199/&amp;tabs=timeline&amp;height=210&amp;small_header=false&amp;adapt_container_width=true&amp;hide_cover=false&amp;show_facepile=true&amp;appId" style="border:none;overflow:hidden"></iframe>
                        <div class="follow_us">
                            <h5 class="title">KÊNH THÔNG TIN</h5>
                            <div class="d-flex gap-3 pt-2">
                                <a rel="canonical" href="https://www.facebook.com/benhvien199" target="_blank"><img src="https://benhvien199.vn/static/old/Content/Website/Assets/images/fb.svg" alt="Facebook Bệnh viện 199"></a>
