@{
    var tagResult = ViewData["Tags"] as List<string>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="section-title">Tags nổi bật</h3>
</div>
<div class="post-tags mt-0">
    @if (tagResult != null && tagResult.Any())
    {
        foreach (var tag in tagResult)
        {
            <a rel="canonical" class="tag-content" href="/postCategory/tags?tag=@System.Web.HttpUtility.UrlEncode(tag)">@tag</a>
        }
    }
</div>
