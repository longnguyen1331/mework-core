@using WebClient.LanguageResources
<RadzenPanelMenu Multiple="false">


    <AuthorizeView>
        @if (context.User.IsInRole("ADMIN")  || context.User.IsInRole("WEBSITEMANAGER"))
        {
            <RadzenPanelMenuItem Text="@L["Menu:WebSite"]" Icon="admin_panel_settings">
                <RadzenPanelMenuItem Text="@L["WebBanner"]" Path="web-banners" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["WebMenu"]" Path="web-menus" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["ServiceType"]" Path="service-types" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["Service"]" Path="services" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["PostCategory"]" Path="post-categories" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["Post"]" Path="posts" Icon="arrow_right"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
        }
      
        @if (context.User.IsInRole("ADMIN"))
        {
            <RadzenPanelMenuItem Text="@L["Menu:Administrator"]" Icon="admin_panel_settings">
                <RadzenPanelMenuItem Text="@L["User"]" Path="users" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["Role"]" Path="roles" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["BackupConfig"]" Path="backups" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["BackupDetail"]" Path="backup-details" Icon="arrow_right"></RadzenPanelMenuItem>

                <RadzenPanelMenuItem Text="@L["Department"]" Path="departments" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["Position"]" Path="positions" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["App_Config"]" Path="app-config" Icon="arrow_right"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="@L["App_History"]" Path="app-history" Icon="arrow_right"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
        }
    </AuthorizeView>
</RadzenPanelMenu>

@code {

    [CascadingParameter]
    public JsonStringLocalizer L { get; set; }

}